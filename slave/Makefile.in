prefix = @prefix@
exec_prefix = @exec_prefix@
libdir = @libdir@
libexecdir = @libexecdir@
srcdir = @srcdir@
top_build_prefix = @top_build_prefix@
top_builddir = @top_builddir@
top_srcdir = @top_srcdir@
install_sh = @install_sh@

CC = @CROSSCC@ 
RM = rm

INCLUDES = -I ../../common -I $(top_srcdir)/common
DEBUG = -dbg
TARGET = nswineslave.exe
LIBS = -lws2_32
CFLAGS = -Wall -g

OBJS = nswineslave.o nsWireProtocol.o
SRCS = $(OBJS:.o=.c)

$(TARGET) : $(OBJS)
	$(CC) $(CFLAGS) $(INCLUDES) -o $(TARGET) $(OBJS) $(LIBS)

nsWireProtocol.o: $(top_srcdir)/common/nsWireProtocol.c
	$(CC) $(INCLUDES) $(CFLAGS) -c $< -o $@

%.o : %.c
	$(CC) $(INCLUDES) $(CFLAGS) -c $< -o $@

compile: $(OBJS)

clean:
	$(RM) -f $(OBJS) $(TARGET)

all: $(TARGET)

install: $(TARGET)
	cp -u $(TARGET) /usr/local/bin

check: all

